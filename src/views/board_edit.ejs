<%- include('inc/top', {title:'게시판 수정'}) %>

<style>
  .board-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
  }
  
  .board-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 24px;
    color: var(--text);
    text-align: center;
  }
  
  .form-table {
    width: 100%;
    border-collapse: collapse;
    margin: 0 auto;
    background: white;
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    padding: 32px;
  }
  
  .form-table th {
    text-align: left;
    padding: 12px;
    font-weight: 600;
    color: var(--text);
    width: 100px;
  }
  
  .form-table td {
    padding: 12px;
  }
  
  .form-table input,
  .form-table textarea {
    width: 100%;
    padding: 12px;
    border: 2px solid #e2e8f0;
    border-radius: 10px;
    font-size: 1rem;
    transition: border-color 0.2s ease;
  }
  
  .form-table input:focus,
  .form-table textarea:focus {
    outline: none;
    border-color: var(--primary);
  }
  
  .form-table textarea {
    height: 120px;
    resize: vertical;
  }
  
  .btn-primary {
    background: var(--primary);
    color: white;
    padding: 12px 24px;
    border: none;
    border-radius: 10px;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.2s ease;
  }
  
  .btn-primary:hover {
    opacity: 0.9;
  }
  
  .post-info {
    background: #f8fafc;
    padding: 16px;
    border-radius: 10px;
    margin-bottom: 24px;
    text-align: center;
  }
  
  .post-info p {
    margin: 4px 0;
    color: #666;
  }
</style>

<div class="board-container">
  <h2 class="board-title">게시글 수정</h2>
  
  <div class="post-info">
    <p><strong>작성자:</strong> <%= post.author || '알 수 없음' %></p>
    <p><strong>작성일:</strong> <%= new Date(post.createdAt).toLocaleString('ko-KR') %></p>
  </div>
  
  <form method="post" action="/board/<%= post._id %>">
    <table class="form-table">
      <tr>
        <th><label for="title">제목</label></th>
        <td><input id="title" name="title" value="<%= post.title %>" required /></td>
      </tr>
      <tr>
        <th><label for="body">내용</label></th>
        <td><textarea id="body" name="body" required><%= post.body %></textarea></td>
      </tr>
      <tr>
        <td colspan="2" class="form-submit">
          <button type="submit" class="btn-primary">수정</button>
        </td>
      </tr>
    </table>
  </form>
</div>

<%- include('inc/bottom') %>