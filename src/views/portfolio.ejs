}

// ν¬νΈν΄λ¦¬μ¤ μ°¨νΈ μ—…λ°μ΄νΈ
function updatePortfolioChart() {
  if (portfolioChart) {
    portfolioChart.destroy();
  }

  if (!portfolioData || !portfolioData.stocks || portfolioData.stocks.length === 0) {
    return;
  }

  const ctx = document.getElementById('portfolio-chart').getContext('2d');
  
  // μ›”λ³„ λ°°λ‹Ή λ°μ΄ν„° μ¤€λΉ„
  const monthlyData = new Array(12).fill(0);
  const monthLabels = ['1μ›”', '2μ›”', '3μ›”', '4μ›”', '5μ›”', '6μ›”', '7μ›”', '8μ›”', '9μ›”', '10μ›”', '11μ›”', '12μ›”'];
  
  // κ° μΆ…λ©μ μ›”λ³„ λ°°λ‹Ήμ„ μ£Όμ‹ μμ— κ³±ν•΄μ„ λ„μ 
  portfolioData.stocks.forEach(stock => {
